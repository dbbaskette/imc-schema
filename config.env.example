# =============================================================================
# Insurance MegaCorp - Configuration Template
# =============================================================================
# Copy this file to config.env and update with your actual values
# =============================================================================

# =============================================================================
# GREENPLUM DATABASE CONFIGURATION
# =============================================================================
export PGHOST="your-greenplum-master.company.com"
export PGPORT="5432"
export PGDATABASE="postgres"  # Default database for initial connection
export PGUSER="gpadmin"
export PGPASSWORD="your-secure-password"
export PGSSLMODE="prefer"

# Target database names (will be created by setup script)
export TARGET_DATABASE="insurance_megacorp"

# =============================================================================
# HDFS CLUSTER CONFIGURATION
# =============================================================================
export HDFS_NAMENODE_HOST="hdfs-namenode.company.com"
export HDFS_NAMENODE_PORT="9000"
export HDFS_PROTOCOL="hdfs"

# =============================================================================
# PXF CONFIGURATION
# =============================================================================
export PXF_SERVER_NAME="hdfs-server"
export PXF_PROFILE="hdfs:parquet"

# =============================================================================
# ENVIRONMENT
# =============================================================================
export ENVIRONMENT="dev"  # Options: dev, staging, prod

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
export LOG_DIR="/Users/dbbaskette/Projects/insurance-megacorp/imc-schema/logs"
export DB_LOG_FILE="$LOG_DIR/db_setup.log"
export PSQL_VERBOSE="false"  # Set to true for verbose psql output